{
  "name": "tiny-topia",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "bun run client:build && bun run server",
    "start:dev": "concurrently \"bun run server:dev\" \"wait-on tcp:3001 && bun run client:dev\"",
    "server": "cd server && bun run start",
    "server:dev": "cd server && bun run dev",
    "install": "cd server && bun i && cd ../client && bun i",
    "client:build": "cd client && bun run build",
    "client:dev": "cd client && bun run dev",
    "build": "bun run client:build && bun run server:build",
    "seed": "cd server && bun run ./server/src/seeds/index.ts",
    "render-build": "bun install && bun run build"
  },
  "dependencies": {
    "bun": "^1.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node": "^18.20.6",
    "path": "^0.12.7",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.8",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.3",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
